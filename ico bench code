Coins['crypto_info_name']=pd.Series(crypto_info_name)
Coins['crypto_info_platform']=pd.Series(crypto_info_platform)
Coins['crypto_info_type']=pd.Series(crypto_info_type)
Coins['crypto_info_preICOprice']=pd.Series(crypto_info_preICOprice)
Coins['crypto_info_priceInICO']=pd.Series(crypto_info_priceInICO)
Coins['crypto_info_tokenForSale']=pd.Series(crypto_info_tokenForSale)
Coins['crypto_info_MinInvestments']=pd.Series(crypto_info_MinInvestments)
Coins['crypto_info_Accepting']=pd.Series(crypto_info_Accepting)
Coins['crypto_info_DistributedInICO']=pd.Series(crypto_info_DistributedInICO)
Coins['crypto_info_SoftCap']=pd.Series(crypto_info_SoftCap)
Coins['crypto_info_HardCap']=pd.Series(crypto_info_HardCap)
Coins['crypto_info_Raised']=pd.Series(crypto_info_Raised)
Coins['whitepaper_status']=pd.Series(whitepaper_status)
Coins.to_csv('Coin.csv') 
